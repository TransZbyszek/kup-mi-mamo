<div class="page-header col-sm-offset-1">
    <h1>Dodaj nowe ogłoszenie</h1>
 </div>

<div id="form" class="form-horizontal">
        <form {{action addAnnouncement on="submit"}}>
                <div class="form-group">
                        <div class="col-sm-5 col-sm-offset-1">
                                <label for="inputTitle" class="control-label">Tytuł ogłoszenia:</label>
                                {{input value=model.title placeholder="Wprowadź nazwę:" class="form-control"}}
                        </div>
                </div>
                <div class="form-group" id="vPlace">
                        <div class="col-sm-5 col-sm-offset-1" id="vState">
                                <label for="inputDescription" class="control-label">Opis:</label>
                                {{input focus-out="validateForm" value=model.description placeholder="Wprowadż opis:" class="form-control"}}
                        </div>
                </div>
                        <div class="col-sm-10 col-sm-offset-1">
                                <button type="submit" class="btn btn-default">Publish</button>
                        </div>

                        {{#if noErrors}}
                        <div>
                                <br><br>
                                <div class="alert alert-success fade in col-sm-offset-1 col-sm-7">
                                <!--<button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>-->
                                <!--</button>-->
                                <strong>Great!</strong> Car has been successfully added to the database!
                                </div>
                        </div>
                        {{/if}}
                        {{#if noFilledForm}}
                        <br><br>
                        <div class="alert alert-danger fade in col-sm-offset-1 col-sm-7">
                               <!--<button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                </button>-->
                                <strong>Error!</strong> Please fill up form.
                        </div>
                        {{/if}}
        </form>
</div>


{{outlet}}
