<div class="page-header col-sm-offset-1">
    <h1>Add new vehicle</h1>      
  </div>

<div id="form" class="form-horizontal">
        <form {{action "publishVehicle" on="submit"}}>
                <div class="form-group">
                        <div class="col-sm-5 col-sm-offset-1">
                                <label for="inputBrand" class="control-label">Brand name:</label>
                                {{input value=mark placeholder="Enter a brand name here" class="form-control"}}
                        </div>
                </div>
                <div class="form-group">
                        <div class="col-sm-5 col-sm-offset-1">
                                <label for="inputPlace" class="control-label">Place:</label>
                                {{input value=place placeholder="Enter the place:" class="form-control"}}
                        </div>
                </div>
                        <div class="col-sm-10 col-sm-offset-1">
                                <button type="submit" class="btn btn-default">Publish</button>
                        </div>
                        {{#if noErrors}}
                        <div>
                                <br><br>
                                <div class="alert alert-success fade-in col-sm-offset-1 col-sm-7">
                                <a href="new#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Great!</strong> Car has been successfully added to the database!
                                </div>
                        </div>
                        {{else}}
                        <br><br>
                        <div class="alert alert-danger fade-in col-sm-offset-1 col-sm-7">
                                <a href="new#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error!</strong> Please fill up form.
                        </div>
                        
                        {{/if}}
        </form>
</div>


{{outlet}}
